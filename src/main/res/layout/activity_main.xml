<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.personal.zhaotf.eathappily.MainActivity">

    <TextView
        android:id="@+id/beChosen"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/star_text"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
 />

    <TextView
        android:id="@+id/wantEat"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/casual_eat"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:layout_toLeftOf="@+id/beChosen"
        android:layout_centerVertical="true"
 />

    <TextView
        android:id="@+id/set_out"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/set_out"
        android:gravity="center"
        android:layout_toRightOf="@+id/beChosen"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
         />

    <TextView
        android:id="@+id/click_me"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/click_me"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="170dp"
        android:layout_marginRight="80dp"
        />

</RelativeLayout>
